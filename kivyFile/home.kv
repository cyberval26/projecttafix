MDScreen:
    name: "home"
    md_bg_color:1,1,1,1
    MDBoxLayout:
        orientation:'vertical'
        MDBoxLayout:
            size_hint_y:.25
            padding:dp(25)
            MDBoxLayout:
                orientation:"vertical"
                MDLabel:
                    text:"Welcome, UC Student"
                    font_style:"H4"
                MDBoxLayout:
                    adaptive_size:True
                    spacing:dp(10)

        MDGridLayout:
            size_hint_y:.75
            cols:2
            padding:[dp(15),dp(15),dp(15),dp(35)]
            spacing:dp(15)

            ElementCard:
                id: poin_kp
                size: (60,60)
                image:"assets/info.png"
                background_color: 255/255,213/255,128/255,1
                text:"Poin KP"
                Button:
                    text: 'Poin KP'

            ElementCard:
                id: info
                size: (60,60)
                image:"assets/reminder.png"
                background_color: 255/255,213/255,128/255,1
                text:"Info"
                Button:
                    text: 'Info'

            ElementCard:
                id: email
                size: (60,60)
                image:"assets/user.png"
                text:"Profile"
                Button:
                    text: 'Profile'
                    font_size: dp(20)
                    background_color: 255/255,213/255,128/255,1
                    on_release: 
                        root.manager.transition.direction = "left"
                        root.manager.current = "profile"

            ElementCard:
                id: logout
                size: (60,60)
                image:"assets/logout.png"
                text: 'Logout'
                Button:
                    text:'Logout'
                    background_color: 255/255,213/255,128/255,1
                    font_size: dp(20)
                    on_release: app.sign_out()


<ElementCard@MDCard>:
    md_bg_color:255/255,213/255,128/255,1
    padding:dp(15)
    spacing:dp(15)
    radius:dp(25)
    ripple_behavior: True
    image:''
    text:""
    items_count:""
    subtext:''

    orientation:'vertical'
    Image:
        source:root.image
    MDBoxLayout:
        orientation:'vertical'
        MDLabel:
            halign:"center"
            text:root.text
            font_style:"H6"
        MDLabel:
            halign:"center"
            font_style:"Caption"
            text:root.subtext
        MDLabel:
            halign:"center"
            text:root.items_count
