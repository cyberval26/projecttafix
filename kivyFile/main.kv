MDScreen:
    name:"main"
    MDFloatLayout:
        md_bg_color: 1,1,1,1
        # Image:
        #     source:"assets/info.png"
        #     pos_hint: {"center_x": .18, "center_y": .95}
        Image:
            source:"assets/splash.png"
            pos_hint:{"center_x": .5, "center_y": .65}

        MDLabel:
            text: "Tertiblah dalam parkir untuk kenyamananmu dan kenyamanan bersama."
            font_name: 'Roboto'
            font_size: "13sp"
            size_hint_x: .85
            pos_hint: {"center_x": .5, "center_y": .3}
            halign: "center"
            color: rgba(127,127,127,255)
        Button:
            text: "LOGIN"
            size_hint: .66, .065
            pos_hint: {"center_x": .5, "center_y": .18}
            background_color: 0,0,0,0
            font_name: "Roboto"
            on_release:
                root.manager.transition.direction = "left"
                root.manager.current = "login"
            canvas.before:
                Color:
                    rgb: rgba(52,0,231,255)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [5]
        
        Button:
            text: "SIGN UP"
            size_hint: .66, .065
            pos_hint: {"center_x": .5, "center_y": .09}
            background_color: 0,0,0,0
            font_name: "Roboto"
            color: rgba(52,0,231,255)
            on_release:
                root.manager.transition.direction = "left"
                root.manager.current = "signup"
            canvas.before:
                Color:
                    rgb: rgba(52,0,231,255)
                Line:
                    width: 1.2
                    rounded_rectangle: self.x, self.y, self.width, self.height, 5, 5, 5, 5, 100